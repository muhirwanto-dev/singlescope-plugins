<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Sample.Views.OnePageView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Sample.ViewModels"
    Title="OnePageView"
    x:DataType="{x:Type vm:OneViewModel}">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label
            HorizontalOptions="Center"
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" />
        <Button Command="{Binding OpenScopedLoadingCommand}" Text="Open Scoped Loading" />
        <Button Command="{Binding OpenCancellableScopedLoadingCommand}" Text="Open Scoped Loading (Cancellable)" />
        <Button Command="{Binding OpenProgressiveLoadingCommand}" Text="Open Progressive Loading" />
        <Button Command="{Binding OpenCancellableProgressiveLoadingCommand}" Text="Open Progressive Loading (Cancellable)" />
        <Button Command="{Binding OpenAlertCommand}" Text="Open Alert" />
    </VerticalStackLayout>
</ContentPage>